---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import formatDate from "../utils/formatDate";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title + " | Avaneesh's Blog"} description={description} />
  </head>

  <body class="min-h-[100svh] w-full dark:bg-gray-800 dark:text-white">
    <Header />
    <main>
      <article class="w-11/12 sm:w-4/5 mt-8 mb-4 mx-auto dark:text-white">
        <!-- <div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				/div> -->
        <h1 class="text-3xl md:text-4xl font-bold">{title}</h1>
        <hr class="my-2" />
        <p class="text-lg dark:text-gray-300">
          {formatDate(pubDate)}
        </p>
        <p class="py-4 text-lg dark:text-gray-300">
          {description}
        </p>
        <div
          class="prose xl:prose-lg dark:prose-invert max-w-full prose-img:rounded-lg"
        >
          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
